report.addField("CURDATE", uk.chromis.data.loader.Datas.TIMESTAMP);
report.addField("CURDEBT", uk.chromis.data.loader.Datas.DOUBLE);
report.addField("DISCOUNT", uk.chromis.data.loader.Datas.DOUBLE); 

