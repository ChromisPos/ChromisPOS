    <initializationActionList>
        <autodetectJava>
            <customErrorMessage>Unable to locate the correct JRE. 

Please install and then restart the installation.</customErrorMessage>
            <explanation>Checking for JRE installation

</explanation>
            <promptUser>1</promptUser>
            <onErrorActionList>
                <showInfo>
                    <customErrorMessage>${java_autodetected}</customErrorMessage>
                    <text>Unable to locate the correct version of Java JRE on your machine. 

Please install Java 1.8 from the web site.

Once Java is installed, restart the Chromis Pos installation process</text>
                </showInfo>
                <launchBrowser>
                    <url>http://www.java.com</url>
                </launchBrowser>
            </onErrorActionList>
            <validVersionList>
                <validVersion>
                    <bitness></bitness>
                    <maxVersion>1.8.0</maxVersion>
                    <minVersion>1.8.0</minVersion>
                    <requireJDK>0</requireJDK>
                    <vendor>sun</vendor>
                </validVersion>
            </validVersionList>
        </autodetectJava>
    </initializationActionList>
    <postInstallationActionList>
        <runProgram>
